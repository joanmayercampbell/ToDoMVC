@model ToDo.Models.List

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>List</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ListTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ListTitle)
        </dd>

    </dl>
</div>

<table class="table">
    <tr>
        <th>
            Status
        </th>
        <th>
            Name
        </th>
        <th>
            Due Date
        </th>
        <th>
            Details
        </th>

        @*<th>
                @Html.DisplayNameFor(model => model.List.ListTitle)
            </th>*@
        <th></th>
    </tr>


    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                <a href="@Url.Action("ToggleDone", new { id = item.ItemID })">

                    @if (item.IsDone)
                    {
                        <span class="glyphicon glyphicon-check"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-unchecked"></span>
                    }
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>

            @*<td>
                @Html.ActionLink("Edit", "Edit",Items", new { id = item.ItemID }, null)
                @Html.ActionLink("Details", "Details","Items" new { id = item.ItemID }, null)
                @Html.ActionLink("Delete", "Delete","Items", new { id = item.ItemID },null)

            </td>*@
        </tr>
    }

</table>
<p>
<p>
    <a href="@Url.Action("AllDone",new { id = Model.ListID, done = true })">
        Mark All Done
    </a>
</p>
<p>
    <a href="@Url.Action("AllDone",new { id = Model.ListID, done = false })">
        Unmark All
    </a>
</p>
</p>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ListID }) 
    @Html.ActionLink("Back to List", "Index")
</p>
